.main
  margin-bottom: 250px
.heading-wrap
  margin-bottom: 70px

.sub-heading-wrap
  margin-bottom: 50px
  text-align: center;

.form-group
  width: 90%

.info-field

.icon-wrap
  margin-bottom: 30px

.icon-icon-f,
.icon-icon-s,
.icon-icon-th
  width: 47px
  height: 47px

.input-row
  width: 100%
  margin-bottom: 25px
  &:last-child
    margin-bottom: 0
.info-field
  width: 100%

.review-row
  width: 100%
  margin-bottom: 70px


.review-area
  width: 100%
  height: 180px
  padding: 25px 20px
  border-width: 1px;
  border-color: rgb(230, 230, 230);
  border-radius: 5px;
  background-color: rgba(218, 218, 218, 0);

.custom-control.custom-checkbox
  display: flex;
  align-items: center;
.custom-control-indicator
  border-style: solid;
  border-width: 1px;
  border-color: rgb(52, 89, 150);
  border-radius: 3px;
  background-color: rgb(255, 255, 255);
  width: 24px;
  height: 24px;
.custom-indicator
  position: relative;
.custom-control-input
  outline: none!important
  border: none
  &:focus
    outline: !important
    border: none
    box-shadow: none

.custom-control-description
  margin-left: 10px
